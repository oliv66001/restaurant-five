{% extends 'base.html.twig' %}

{% block title %}Réservation d'une table{% endblock %}

{% block body %}
     <style>
      #calendar {
        max-width: 900px;
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-4">
          <h2>Réservez votre table</h2>
          <form method="post" action="{{ path('app_reservation') }}">
            <div class="form-group">
              <label for="date">Date</label>
              <input type="text" class="form-control" id="date" name="date" required>
            </div>
            <div class="form-group">
              <label for="time">Heure</label>
              <input type="text" class="form-control" id="time" name="time" required>
            </div>
            <div class="form-group">
              <label for="nb_people">Nombre de personnes</label>
              <input type="number" class="form-control" id="nb_people" name="nb_people" required>
            </div>
            <button type="submit" class="btn btn-primary">Réserver</button>
          </form>
        </div>
        <div class="col-md-8">
          <div id="calendar"></div>
        </div>
      </div>
    </div>
    {% endblock %}
