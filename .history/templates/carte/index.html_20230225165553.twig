{% extends "base.html.twig" %}

{% block title %}Le Quai-Antique | La carte
{% endblock %}

{% block body %}
	<article class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-md-4">
				<h1 class="text-center mt-5">La carte</h1>
				{% for category in category %}
					<h2>{{ category.name }}</h2>
					<ul>
						{% for dishe in dishes %}
							{% if dishe.categories.id == category.id %}
              <section class="container">
                <div class="row">
                  <div class="col">

                  	<li><h2 class="text-center">{{ dishe.name }}</h2></li>
                  
                  </div>
                </div>
              </section>
							
								<li>{{ dishe.description }}</li>
								<li>{{ dishe.price }}</li>
							{% endif %}

						{% endfor %}
					</ul>
				{% endfor %}
			</div>
		</div>
	</article>
{% endblock %}
